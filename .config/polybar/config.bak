font-0 = "SFNS Display:style=Regular:size=11:antialias=true;2"
font-2 = "Segoe UI Symbol:style=Regular:size=12;1"
font-3 = "Source Code Pro:style=Regular:size=12;3"
font-4 = "Quivira:style=Regular:size=13;1"
font-5 = "Scientifica:size=11;2"

;--------;
; COLORS ;
;--------;

background = 
background-alt = #555
foreground = ${xrdb:foreground}
foreground-alt = #555
primary_light = ${xrdb:color1}
primary_dark = ${xrdb:color6}
secondary = ${srdb:color7}
alert = ${xrdb:color4}

;---------------;
; MISCELLANEOUS ;
;---------------;

radius = 0.0
fixed-center = true
padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

modules-left = pulseaudio backlight-acpi
modules-center = spotify
modules-right = battery

;---------;
; MODULES ;
;---------;

[module/spotify]
type = custom/script
interval = 5
format-prefix = " "
format = <label>
exec = python $HOME/.config/polybar/spotify.py
format-underline = 
format-foreground = ${colors.foreground}

[module/xwindow]
type = internal/xwindow
;label = %title:0:30:...%
format-foreground = ${colors.foreground}
label = %title%
label-maxlen = 80
label-empty =

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
wrapping-scroll = false

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;
;ws-icon-default = 

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 0
label-mode-foreground = ${colors.primary}
label-mode-background =

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = 
label-focused-foreground = ${colors.foreground}
;label-focused-underline = ${colors.foreground}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.background-alt}
;label-unfocused-underline =

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

; Separator in between workspaces
; label-separator = |

[module/i3menu]
type = internal/i3
format = <label-mode>

label-mode-foreground = ${colors.alert}


[module/xbacklight]
type = internal/xbacklight

format = <ramp> <label> <bar>

ramp-0 = 🔅
ramp-1 = 🔅
ramp-2 = 🔆
ramp-3 = 🔆
ramp-4 = 🔆

label = "%percentage%%"
label-foreground = ${colors.foreground}

bar-width = 20
bar-indicator = 
bar-indicator-foreground = ${colors.foreground}
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.primary_dark}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground}
enable-scroll = true

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/xbacklight
card = nvidia_backlight 

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5.0

format-connected-prefix = "  "
format-connected = <label-connected>
format-connected-foreground = ${colors.foreground}
label-connected = %essid%
label-connected-foreground = ${colors.foreground}

format-disconnected =

[module/eth]
type = internal/network
interface = enp0s10
interval = 5.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground}
format-connected-foreground = ${colors.foreground}
label-connected = " "

format-disconnected =

[module/date]
type = internal/date
interval = 300

date = "%d/%m/%Y"

format-prefix = " "
format-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.foreground}

label = %date%

[module/time]
type = internal/date
interval=1

date =
time = "%H:%M:%S"

format-prefix = " "
label = %time%

format-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.foreground}


[module/time-date]
type = internal/date
interval = 1

date = " %H:%M:%S  "
date-alt = " %d/%m/%y  "

time = " " 
time-alt =  " "
label = %date% %time%

format-date-foreground = ${colors.foreground}
format-time-foreground = ${colors.background-alt}

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = true
format-volume = <ramp-volume> <label-volume> <bar-volume>

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 
ramp-volume-5 = 
ramp-volume-6 = 
ramp-volume-7 = 
ramp-volume-8 = 
ramp-volume-9 = 
ramp-volume-10 = 
ramp-volume-11 = 


label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted =  muted
label-muted-foreground = #8a8381

bar-volume-width = 20
bar-volume-foreground-0 = ${colors.primary_dark}
;2587bd
;bar-volume-foreground-0 = #59ff55
;bar-volume-foreground-1 = #59ff55
;bar-volume-foreground-2 = #59ff55
;bar-volume-foreground-3 = #59ff55
;bar-volume-foreground-4 = #59ff55
;bar-volume-foreground-5 = #f5a70a
;bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = 
bar-volume-indicator-font = 3
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
;format-charging-underline = #ffb52a

format-discharging = <animation-discharging> <label-discharging>
;format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = "   "
;format-full = <ramp-capacity>
format-full-prefix-foreground = ${colors.foreground}
;format-full-underline = ${self.format-charging-underline}
format-full-foreground = ${colors.foreground}
ramp-capacity-0 = ▂
ramp-capacity-1 = ▂▆
ramp-capacity-2 = ▂▆▉ 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 60

animation-discharging-0 = 
animation-discharging-1 = 
animation-discharging-foreground = ${colors.foreground}
animation-discharging-framerate = 600

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = " "
label-open-foreground = ${colors.foreground}
label-close =  " "
label-close-foreground = ${colors.red}
label-separator = " "
label-separator-foreground = 

menu-0-0 = 
menu-0-0-foreground = ${colors.foreground}
menu-0-0-exec = i3-nagbar -m 'Do you want to power off your system?' -B '' 'poweroff' -t warning 
menu-0-1 = 
menu-0-1-foreground = ${colors.foreground}
menu-0-1-exec = i3-nagbar -m 'Do you want to reboot your system?' -B '' 'systemctl reboot' -t warning

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 0

